{
	"extends": ["tslint-plugin-prettier", "tslint-config-prettier"],
	"rules": {
		"no-unused-expression": true,
		"no-duplicate-variable": true,
		"class-name": true,
		"semicolon": true,
		"triple-equals": true,
		"no-var-keyword": true,
		"no-bitwise": true,
		"ordered-imports": true,
		"no-require-imports": true,
		"import-spacing": true,
		"arrow-return-shorthand": true,
		"align": true,
		"quotemark": [
			true,
			"single"
		]
	}
}